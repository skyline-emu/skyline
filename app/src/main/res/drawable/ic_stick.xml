<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <solid android:color="#A0000000" />
            <stroke
                    android:width="2dp"
                    android:color="@android:color/black" />
            <size
                    android:width="25dp"
                    android:height="25dp" />
            <padding
                    android:bottom="10dp"
                    android:left="10dp"
                    android:right="10dp"
                    android:top="10dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <!--
            <stroke
